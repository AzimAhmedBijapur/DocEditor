@model DocEditor.Models.Doc
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> userManager;

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Title" class="form-control" value="Untitled" minlength="2" maxlength="15" />
                <span asp-validation-for="Title" class="text-danger"></span>

            </div>
            <div class="form-group mt-3">
                <textarea id="tiny" asp-for="Content" class="form-control" style="width:80vw; height:60vh;" >
                </textarea>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId" class ="form-control" value="@userManager.GetUserId(User)"></input>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
